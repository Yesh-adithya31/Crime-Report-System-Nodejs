<!-- Validation of Login Form & Recovery Email form -->
<script>
    $( document ).ready(function() {
        $("#txt_email").val('');
        $("#txt_password").val('');
        $("#loginform").validate({
            ignore: [],
            rules: {
                txt_email: {
                    required: true,
                    email: true
                },
                txt_password: {
                    required: true
                }
            },
            messages: {
                txt_email: {
                    required: "Enter an email address",
                    email: "Enter an valid email address"
                },
                txt_password: "Enter your password"
            }, highlight: function (element) {
                $(element).addClass('error');
            }, unhighlight: function (element) {
                $(element).removeClass('error');
            },
            submitHandler: function (form) {
                let formData = new FormData(form);
                $.ajax({
                    url: '/crime/signIn',
                    data: $('#loginform').serializeArray(),
                    dataType: 'json',
                    method: 'POST',
                    processData: true,
                    error: function (error) {
                        $.toast({
                            heading: 'Error',
                            text: 'Internal Server Error!',
                            position: 'top-right',
                            loaderBg: '#effff8',
                            icon: 'error',
                            hideAfter: 3500
                        });
                    },
                    success: function (r) {
                        if (r.status === 200) {
                            $.toast({
                                heading: 'Success',
                                text: r.message,
                                position: 'top-right',
                                loaderBg: '#effff8',
                                icon: 'info',
                                hideAfter: 3500
                            });
                            window.location.href = "/crime"
                        }
                        if (r.status == 500) {
                            $.toast({
                                heading: 'Error',
                                text: r.message,
                                position: 'top-right',
                                loaderBg: '#effff8',
                                icon: 'error',
                                hideAfter: 3500
                            });
                        }
                    }
                });
            }
        });
    
    });
</script>

